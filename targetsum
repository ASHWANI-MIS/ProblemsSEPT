class Solution {
    public int findTargetSumWays(int[] nums, int S) {
        return helper(nums, S, 0);
    }

    private int helper(int[] nums, int target, int index) {
        // Base case: if we've processed all numbers
        if (index == nums.length) {
            return target == 0 ? 1 : 0;
        }

        // Try adding the current number
        int add = helper(nums, target - nums[index], index + 1);

        // Try subtracting the current number
        int subtract = helper(nums, target + nums[index], index + 1);

        // Return total ways from both choices
        return add + subtract;
    }
}
